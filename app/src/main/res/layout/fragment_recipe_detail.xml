<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:paddingEnd="@dimen/space_small"
                                            android:paddingStart="@dimen/space_small"
                                            tools:context="com.github.alexpfx.udacity.nanodegree.android.baking_app.recipe.ui.detail.RecipeDetailFragment"
                                            android:id="@+id/nestedScrollView"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_error_content_not_loaded" android:id="@+id/layout_content_cannot_loaded"/>

        <LinearLayout
            android:id="@+id/recipe_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/elevation_small"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_ingredient_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space_normal"
                    >


                </android.support.v7.widget.RecyclerView>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/elevation_small"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_step_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space_normal"
                    >


                </android.support.v7.widget.RecyclerView>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </FrameLayout>


</android.support.v4.widget.NestedScrollView>