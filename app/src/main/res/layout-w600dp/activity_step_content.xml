<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">

        <fragment
            android:id="@+id/recipe_list_fragment"
            android:name="com.github.alexpfx.udacity.nanodegree.android.baking_app.recipe.ui.detail.RecipeDetailFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


        <fragment
            android:id="@+id/recipe_detail_fragment"
            android:name="com.github.alexpfx.udacity.nanodegree.android.baking_app.step.ui.StepDetailFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    </LinearLayout>

</merge>