<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.alexpfx.udacity.nanodegree.android.baking_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".App"
        >
        <provider
            android:authorities="com.github.alexpfx.udacity.nanodegree.android.baking_app"
            android:name=".data.local.provider.BakingAppContentProvider"
            android:exported="false"
            />
        <activity
            android:name=".recipe.StepActivity"
            android:label="@string/title_activity_step"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".recipe.RecipeActivity"
            android:label="@string/title_activity_recipe"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>